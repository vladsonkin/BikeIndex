<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Themes -->
    <style name="ToolbarTheme" parent="AppTheme">
        <!-- navigation icon colorModel -->
        <item name="colorControlNormal">@color/white</item>

        <!-- colorModel of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/white</item>

        <!-- toolbar title colorModel -->
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="BlueEditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="WhiteSwitchTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="EditTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Typography -->
    <style name="ToolbarTitle.White" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" />

    <style name="ToolbarSubtitle.White" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title" />

    <style name="Title.Inverse" parent="TextAppearance.AppCompat.Title.Inverse" />

    <style name="Title.Transparent">
        <item name="android:textColor">@color/transparent</item>
    </style>

    <style name="Title.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead" />

    <style name="Body1" parent="TextAppearance.AppCompat.Body1" />

    <style name="Body1.Grey">
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="Body1.Blue">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Body1.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Body2" parent="TextAppearance.AppCompat.Body2" />

    <!-- Buttons -->
    <style name="Button" parent="Widget.AppCompat.Button" />

    <style name="Button.WhiteText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_ripple_white</item>
    </style>

    <style name="Button.BlueText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/bg_ripple_blue</item>
    </style>

</resources>
